{
    "rules": {
        "users": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid"
            }
        },
        "leagues": {
            "$code": {
                ".read": "auth !== null",
                ".write": "auth !== null",
                "players": {
                    "$uid": {
                        ".write": "$uid === auth.uid || auth !== null"
                    }
                }
            }
        },
        "communityCategories": {
            ".read": "auth !== null",
            ".write": "auth !== null",
            "$catId": {
                "upvotedBy": {
                    "$uid": {
                        ".write": "$uid === auth.uid"
                    }
                }
            }
        }
    }
}
